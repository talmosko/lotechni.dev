---
import Navbar from '@components/astro/Navbar.astro'
import '@fontsource-variable/rubik'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="he">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body dir="rtl" class="min-h-dvh bg-surface-dark text-white antialiased">
    <Navbar />
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer base {
    /* Only keeping styles that can't be easily replicated with Tailwind */
    .text-gradient {
      @apply bg-[length:400%] bg-[0%] transition-[background-position] duration-300;
      background-image: linear-gradient(
        45deg,
        oklch(61.44% 0.099 196.83),
        oklch(85.93% 0.063 195.95) 30%,
        white 60%
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-family: 'Rubik Variable', sans-serif;
    }

    .text-gradient:hover {
      background-position: 100%;
    }
  }
</style>
