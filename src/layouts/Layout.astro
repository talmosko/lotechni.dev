---
import Navbar from '@components/astro/Navbar.astro'
import '@fontsource-variable/rubik'
import Footer from '@components/astro/Footer.astro'
import { allTasks } from 'nanostores'
import { ToastContainer } from 'react-toastify'
import { SEO } from 'astro-seo'
import { defaultSEO } from '@data/seo/defaultSeo'
import type { Props as SEOProps } from 'astro-seo'

interface Props {
  title: string
  seo?: Partial<SEOProps>
  showLogo?: boolean
}

const { title, seo = {}, showLogo = true } = Astro.props
const fullSEO = {
  ...defaultSEO,
  ...seo,
  title: title,
}

import { $showData } from '@stores/episodes'
import Logo from '@components/astro/Logo.astro'
const show = $showData.get().data
await allTasks()
if (!show) {
  throw new Error('No show data found')
}
---

<!doctype html>
<html lang="he">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon-logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO {...fullSEO} />
    <link rel="sitemap" href="/sitemap.xml" />
    <title>{title}</title>
  </head>
  <body dir="rtl" class="flex min-h-dvh flex-col bg-surface-dark text-white antialiased">
    <Navbar />
    {showLogo && <Logo showName={show.name} />}
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <ToastContainer
      client:idle
      position="bottom-center"
      autoClose={1000}
      hideProgressBar
      newestOnTop={false}
      closeOnClick
      rtl
      pauseOnFocusLoss
      draggable
      pauseOnHover
      theme="dark"
    />
  </body>
</html>

<style is:global>
  /* Global scrollbar styles */
  * {
    /* For Webkit browsers like Chrome/Safari */
    &::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }

    &::-webkit-scrollbar-track {
      background: oklch(17.95% 0.012 255.31 / 0.5); /* surface color with opacity */
      border-radius: 4px;
    }

    &::-webkit-scrollbar-thumb {
      background: oklch(77.94% 0.127 196.83); /* accent color */
      border-radius: 4px;

      &:hover {
        background: oklch(85.93% 0.063 195.95); /* accent-light color */
      }
    }

    /* For Firefox */
    scrollbar-width: thin;
    scrollbar-color: oklch(77.94% 0.127 196.83) oklch(17.95% 0.012 255.31 / 0.5);
  }

  /* Hide scrollbar utility class */
  .scrollbar-hide {
    &::-webkit-scrollbar {
      display: none;
    }
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .text-gradient {
    background-image: linear-gradient(
      45deg,
      oklch(61.44% 0.099 196.83) 10%,
      oklch(85.93% 0.063 195.95) 50%,
      white 90%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @keyframes gradient-xy {
    0%,
    100% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 100% 100%;
    }
  }

  .animate-gradient-xy {
    background-size: 400% 400%;
    animation: gradient-xy 4s linear infinite;
  }
</style>

<script>
  import { initializeAllSliders } from '@utils/carousel'

  // Initialize sliders on page load
  document.addEventListener('DOMContentLoaded', initializeAllSliders)
</script>
