---
import Layout from '@layouts/Layout.astro'
import SuccessStories from '@sections/our-story/SuccessStories.astro'
import Hosts from '@sections/home/Hosts.astro'
import SectionContainer from '@components/astro/containers/SectionContainer.astro'
import CommunityCard from '@components/astro/CommunityCard.astro'
import Heading from '@components/astro/typography/Heading.astro'
import type { Props as SEOProps } from 'astro-seo'
import Description from '@sections/common/Description.astro'

const title = 'הסיפור שלנו'
const description = `"לא טכני ולא במקרה" הוא פודקאסט וקהילה המוקדשים לפיתוח המיומנויות הלא-טכניות של מפתחים ומפתחות. אנחנו, אדיר וטל, הקמנו את הקהילה מתוך אמונה שמפתחים מצוינים הם הרבה יותר מסתם כותבי קוד. מהניסיון הרב שלנו ודרך שיחות מעמיקות עם מומחים מהתעשייה, אנחנו חוקרים נושאים כמו פיתוח קריירה, פאוור סקילס, מנהיגות טכנית ודינמיקה מקצועית. הקהילה שלנו היא מרחב בטוח ותומך למפתחים להתפתח, לשתף, ולצמוח יחד מעבר לשורות הקוד. אנחנו מזמינים אתכם להצטרף למסע המתמשך שלנו בחקירת האספקטים האנושיים של עולם הפיתוח, ולגלות יחד איך להפוך למפתחים טובים יותר - לא במקרה.`

const pageSEO: Partial<SEOProps> = {
  title: 'הסיפור שלנו',
  description,
  openGraph: {
    basic: {
      title: 'הסיפור שלנו - לא טכני ולא במקרה',
      type: 'website',
      image: '/og-default.webp',
      url: Astro.url.href,
    },
    optional: {
      description,
    },
    article: {
      authors: ['Adir Kandel', 'Tal Moskovich'],
      tags: ['podcast', 'community', 'developers', 'tech community', 'career development'],
    },
  },
}
---

<Layout title={title} seo={pageSEO}>
  <Description description={description} />
  <Heading level={2} className="text-center">מנהלי הקהילה</Heading>
  <Hosts />

  <SuccessStories />
  <SectionContainer>
    <CommunityCard />
  </SectionContainer>
</Layout>
