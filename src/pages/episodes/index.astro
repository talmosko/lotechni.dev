---
import Layout from '@layouts/Layout.astro'
import DescriptionCard from '@components/astro/DescriptionCard.astro'
import EpisodesGrid from '@sections/episodes/EpisodesGrid.astro'
import { $showData } from '@stores/episodes'
import SectionContainer from '@components/astro/containers/SectionContainer.astro'
const show = $showData.get().data

if (!show) {
  throw new Error('No show data found')
}
---

<Layout title={show.name}>
  <SectionContainer>
    <DescriptionCard>
      {show.description}
    </DescriptionCard>
  </SectionContainer>
  <EpisodesGrid />
</Layout>
