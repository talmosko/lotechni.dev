---
import Layout from '@layouts/Layout.astro'
import DescriptionCard from '@components/astro/DescriptionCard.astro'
import Speakers from '@components/astro/Speakers.astro'
import EpisodesGrid from '@sections/episodes/EpisodesGrid.astro'
import { $showData } from '@store/episodes'
const show = $showData.get().data

if (!show) {
  throw new Error('No show data found')
}
---

<Layout title={show.name}>
  <DescriptionCard>
    {show.description}
  </DescriptionCard>
  <Speakers />
  <EpisodesGrid />
</Layout>
