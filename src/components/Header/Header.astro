---
import Container from "./container.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "בית",
    path: "/",
  },
  {
    title: "מי אנחנו",
    path: "#whoarewe",
  },
  {
    title: "פרקים",
    path: "/episodes",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-cyan-600">לא טכני ולא במקרה</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-8 h-8 text-cyan-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                <li>
                  <a href={item.path} class="flex lg:px-3 py-2 text-cyan-600 ">
                    {item.title}
                  </a>
                </li>
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4"></div>
      </MenuItems>
    </Astronav>
  </header>
</Container>
