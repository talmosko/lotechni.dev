---
import { cn } from '@utils/cn'

interface Props {
  className?: string
  showGradient?: boolean
  gradientOnlyOnHover?: boolean
}

const { className, showGradient = false, gradientOnlyOnHover = false } = Astro.props
---

<div class={cn('group/image relative inline-block', className)}>
  {
    showGradient && (
      <div
        class={cn(
          'animate-gradient-xy absolute -inset-0.5 rounded-lg bg-gradient-to-r from-accent via-accent-dark to-accent-light',
          gradientOnlyOnHover &&
            'opacity-0 transition-opacity duration-300 group-hover/image:opacity-100'
        )}
      />
    )
  }

  <div class="relative overflow-hidden rounded-lg">
    <slot />
  </div>
</div>
