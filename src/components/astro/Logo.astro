---
import LogoSvg from '@assets/logos/logo.svg'
import Heading from '@components/astro/typography/Heading.astro'
import { Image } from 'astro:assets'

interface Props {
  showName: string
}

const { showName } = Astro.props
---

<div class="logo-container cursor-pointer text-center">
  <Image
    src={LogoSvg}
    alt={`${showName} logo`}
    class="mx-auto block h-auto w-72"
    format="webp"
    quality={95}
    loading="eager"
  />
  <Heading level={1} class="text-gradient mt-6 text-5xl font-bold leading-tight">
    {showName}
  </Heading>
</div>

<script>
  const logoContainer = document.querySelector('.logo-container')
  if (logoContainer) {
    logoContainer.addEventListener('click', () => {
      window.location.href = '/'
    })
  }
</script>
