---
import LogoSvg from '@assets/logos/logo.svg'
import Heading from '@components/astro/typography/Heading.astro'
import { Image } from 'astro:assets'

interface Props {
  showName: string
  clickable?: boolean
}

const { showName, clickable = false } = Astro.props

const Tag = clickable ? 'a' : 'header'
---

<Tag class="py-6 text-center md:py-12" {...clickable && { href: '/' }}>
  <Image
    src={LogoSvg}
    alt={`${showName} logo`}
    class="mx-auto block h-auto w-72"
    format="webp"
    quality={95}
    loading="eager"
  />
  <Heading level={1} class="text-gradient mt-6 text-5xl font-bold leading-tight">
    {showName}
  </Heading>
</Tag>
