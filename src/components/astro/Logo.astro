---
import LogoPng from '@assets/logos/podcast_artwork.png'
import Heading from '@components/astro/typography/Heading.astro'
import { Image } from 'astro:assets'

interface Props {
  showName: string
  clickable?: boolean
}

const { showName, clickable = false } = Astro.props

const Tag = clickable ? 'a' : 'header'
---

<Tag class="py-6 text-center md:py-12" {...clickable && { href: '/' }}>
  <Image
    src={LogoPng}
    alt={`${showName} logo`}
    class="mx-auto block h-auto w-96"
    format="webp"
    quality={95}
    loading="eager"
  />
</Tag>
