---
import { cn } from '@utils/cn'
import type { HTMLTag, HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'> {
  level: 1 | 2 | 3 | 4 | 5 | 6
  className?: string
  gradient?: boolean
  rest?: HTMLAttributes<'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'>
}

const { level, className = '', gradient = false, ...rest } = Astro.props

const baseStyles = {
  1: 'text-4xl md:text-5xl font-bold',
  2: 'text-3xl md:text-4xl font-bold',
  3: 'text-2xl md:text-3xl font-bold',
  4: 'text-xl md:text-2xl font-semibold',
  5: 'text-lg md:text-xl font-semibold',
  6: 'text-base md:text-lg font-semibold',
}

const Tag = `h${level}` as HTMLTag
---

<Tag class={cn(baseStyles[level], gradient && 'text-gradient', className)} {...rest}>
  <slot />
</Tag>
