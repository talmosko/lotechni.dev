---
import LogoSvg from '@asstes/logos/logo.svg'
interface Props {
  showName: string
}

const { showName } = Astro.props
---

<div class="text-center">
  <img src={LogoSvg.src} alt={`${showName} logo`} class="mx-auto block h-auto w-72" />
  <h1 class="text-gradient mt-6 text-5xl font-bold leading-tight">
    {showName}
  </h1>
</div>
