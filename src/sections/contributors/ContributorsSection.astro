---
import SectionContainer from '@components/astro/containers/SectionContainer.astro'
import ContributorCard from '@components/astro/cards/ContributorCard.astro'
import type { ImageMetadata } from 'astro'

interface Contributor {
  name: string
  englishName: string
  image: ImageMetadata
  description: string
  linkedin: string
  github: string
}

interface Props {
  contributors: Contributor[]
}

const { contributors } = Astro.props
---

<SectionContainer innerClasses="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-8">
  {contributors.map((contributor) => <ContributorCard {...contributor} />)}
</SectionContainer>
