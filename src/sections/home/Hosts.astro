---
import SectionContainer from '@components/astro/containers/SectionContainer.astro'
import HostCard from '@components/astro/cards/HostCard.astro'
import type { ImageMetadata } from 'astro'
import type { SocialLink } from '@data/types/icons'
import TalImg from '@assets/images/tal.jpeg'
import AdirImg from '@assets/images/adir.jpg'

interface Host {
  name: string
  image: ImageMetadata
  description: string
  socials: SocialLink[]
}

const speakers: Host[] = [
  {
    name: 'טל מוסקוביץ',
    image: TalImg,
    description: `מפתח פולסטאק ב-ImagenAI. מניסיוני במעברים בין תפקידים בקריירה, פיתחתי שיטות להתבלטות בתחומים חדשים. היום אני מאמן קריירה למפתחים ועוזר להם בבניית נוכחות מקצועית ופרואקטיביות, כדי לקדם את הקריירה שלהם ולהישאר רלוונטיים בתעשייה.`,
    socials: [
      { icon: 'www', url: 'https://tmosko.com' },
      { icon: 'linkedin', url: 'https://www.linkedin.com/in/tmosko/' },
    ],
  },
  {
    name: 'אדיר קנדל',
    image: AdirImg,
    description:
      'אדיר ראש צוות ב-Tenable, מפתח ווב, מנטור ומנהל קהילות. מנחה שני פודקאסטים, כותב בלוג למפתחים ומרצה בכנסים. יועץ עצמאי המסייע לסטארטאפים ועסקים בפתרונות תוכנה.',
    socials: [
      { icon: 'www', url: 'https://linktr.ee/adir_kandel' },
      { icon: 'linkedin', url: 'https://www.linkedin.com/in/adir-kandel/' },
    ],
  },
]
---

<SectionContainer innerClasses="flex flex-col md:grid md:grid-cols-2 gap-4">
  {speakers.map((speaker, index) => <HostCard {...speaker} reversed={index % 2 === 0} />)}
</SectionContainer>
